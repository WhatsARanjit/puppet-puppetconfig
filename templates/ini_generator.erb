  Ini_setting {
    ensure  => present,
    path    => $config,
    section => $section,
  }
<% @req.each do |key,val| -%>
  ini_setting { '<%= @stanza %> <%= key %>':
    setting => '<%= key %>',
    value   => $<%= key %>,
  }
<% end -%>
<% @ini.each do |key,val| -%>
<% if key=='section' %>
  if $section != $::puppet::params::<%= @stanza %>::section {
    ini_setting { '<%= @stanza %> section':
      setting => 'name',
      value   => $section,
    }
  }
<% else -%>
  if $<%= key %> != $::puppet::params::<%= @stanza %>::<%= key %> {
    ini_setting { '<%= @stanza %> <%= key %>':
      setting => '<%= key %>',
      value   => $<%= key %>,
    }
  }
<% end -%>
<% end -%>
